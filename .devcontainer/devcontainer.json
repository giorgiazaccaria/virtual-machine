{
    "name": "R",
    "image": "ghcr.io/rocker-org/devcontainer/geospatial:4.2",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
            "version": "prerelease"
        },
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "libudunits2-dev,libxtst6,libxt6,libmagick++-dev"
        },
        "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
            "packages": "MASS,grDevices,graphics,tclust,Rcpp,foreach,rlang,cellWise,reshape2,scales,ggplot2,matrixStats,gridExtra,robustbase,rrcov,svd,shape,pracma,purrr,mvnfast,mclust,remotes,doParallel,parallel,foreach,MixtureMissing,mvtnorm,mnormt,cluster,Bessel,mice"
        },
    },
    "forwardPorts": [8787, 8888],
    "portsAttributes": {
		    "8787": {
			    "label": "Rstudio",
			    "requireLocalPort": true,
			    "onAutoForward": "ignore"
		    }
	  },
    "customizations": {
        "codespaces": {
            "openFiles": ["README.md"]
        }
    }, 
    "postAttachCommand": "sudo rstudio-server start"
}
